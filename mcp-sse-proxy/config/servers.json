{
  "servers": {
    "everything": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-everything"
      ],
      "env": {}
      },
    "docker": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-docker"
      ],
      "env": {}
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "env": {}
    },
    "git": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-git"
      ],
      "env": {
        "GIT_PYTHON_GIT_EXECUTABLE": "/usr/bin/git",
        "GIT_PYTHON_REFRESH": "quiet"
      }
    },
    "fetch": {
      "type": "stdio",
      "command": "uvx",
      "args": ["mcp-server-fetch"],
      "env": {}
    },
    "time": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-time"
      ],
      "env": {
        "TZ": "Asia/Jerusalem",
        "LANG": "en_US.UTF-8",
        "PYTHONUNBUFFERED": "1",
        "DEBUG": "mcp:*"
      }
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "env": {
        "MEMORY_STORAGE_PATH": "/app/data/memory",
        "NODE_ENV":"production"
      }
    },
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/app/sandbox", "/app/uploads"],
      "env" : {
        "NODE_ENV": "production",
        "MAX_FILE_SIZE": "52428800"
      }
    },
    "perplexity": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@perplexity-ai/mcp-server"],
      "timeout": 300000,
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}",
        "PERPLEXITY_MODEL": "sonar-pro",
        "PERPLEXITY_TIMEOUT_MS": "600000"
      }
    },
    "Tavily": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "tavily-mcp@latest"
      ],
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}"
      },
      "disabled": false,
      "autoApprove": []
    },
    "youtube-video-summarizer": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "youtube-video-summarizer-mcp"],
      "env": {}
    },
    "datagov": {
      "type": "stdio",
      "command": "sh",
      "args": [
        "-c",
        ". /opt/datagov-venv/bin/activate && python -m datagov.server"
      ],
      "env": {
        "BASE_URL": "https://data.gov.il/api/3",
        "DATAGOV_CACHE_DIR": "/app/data/datagov",
        "DATAGOV_DEFAULT_LIMIT": "500",
        "DATAGOV_MAX_LIMIT": "1000",
        "DATAGOV_TIMEOUT_MS": "60000",
        "DATAGOV_LOG_PAYLOADS": "true",
        "DATAGOV_PROXY_URL": "${DATAGOV_PROXY_URL}"
      }
    }
  }
}
